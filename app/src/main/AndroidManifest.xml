<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oneday">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OneDay"
        android:usesCleartextTraffic="true">
        <activity android:name=".UI.Profile.PortfolioActivity"></activity>
        <activity
            android:name=".UI.Profile.ProfileSetup"
            android:theme="@style/Theme.OneDay.Fullscreen" />
        <activity android:name=".UI.DashBoard.DashBoard"
            android:theme="@style/Theme.OneDay.Fullscreen"/>
        <activity
            android:name=".UI.PhoneAuthentication.PhoneAuthActivity"
            android:theme="@style/Theme.OneDay.Fullscreen" />
        <activity
            android:name=".UI.WelcomeScreen"
            android:theme="@style/Theme.OneDay.Fullscreen" />
        <activity
            android:name=".UI.SplashScreen"
            android:theme="@style/Theme.OneDay.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>