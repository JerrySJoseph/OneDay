<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_margin="@dimen/layoutPadding"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:elevation="5dp"
    android:background="@drawable/bg_button_rounded_regular"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/notif"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:clickable="true"
        android:foreground="@drawable/bg_selected">
        <RelativeLayout
            android:layout_width="@dimen/bottom_nav_item_height"
            android:layout_height="@dimen/bottom_nav_item_width">
            <ImageView
                android:id="@+id/ic_notif"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/bottom_nav_item_icon_width"
                android:layout_height="@dimen/bottom_nav_item_icon_height"
                app:tint="@color/black_overlay"
                android:src="@drawable/ic_notifications"/>
            <TextView
                android:elevation="2dp"
                android:id="@+id/tv_notif"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="@dimen/badgeSizeSmall"
                android:layout_height="@dimen/badgeSizeSmall"
                android:background="@drawable/bg_badge"
                android:padding="2dp"
                android:gravity="center"
                android:textColor="@color/white"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/likes"
        android:clickable="true"
        android:foreground="@drawable/bg_selected"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="@dimen/bottom_nav_item_height"
            android:layout_height="@dimen/bottom_nav_item_width">
            <ImageView
                android:id="@+id/ic_likes"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/bottom_nav_item_icon_width"
                android:layout_height="@dimen/bottom_nav_item_icon_height"
                app:tint="@color/black_overlay"
                android:src="@drawable/ic_likes"/>
            <TextView
                android:elevation="2dp"
                android:id="@+id/tv_likes"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="@dimen/badgeSizeSmall"
                android:layout_height="@dimen/badgeSizeSmall"
                android:background="@drawable/bg_badge"
                android:padding="2dp"
                android:gravity="center"
                android:textColor="@color/white"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/home"
        android:clickable="true"
        android:foreground="@drawable/bg_selected"
        android:background="@drawable/bg_button_primary"
        android:elevation="5dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="@dimen/bottom_nav_item_height"
            android:layout_height="@dimen/bottom_nav_item_width">
            <ImageView
                android:id="@+id/ic_home"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/bottom_nav_item_icon_width"
                android:layout_height="@dimen/bottom_nav_item_icon_height"
                app:tint="@color/white"
                android:src="@drawable/ic_home"/>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/requests"
        android:clickable="true"
        android:foreground="@drawable/bg_selected"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="@dimen/bottom_nav_item_height"
            android:layout_height="@dimen/bottom_nav_item_width">
            <ImageView
                android:id="@+id/ic_requests"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/bottom_nav_item_icon_width"
                android:layout_height="@dimen/bottom_nav_item_icon_height"
                app:tint="@color/black_overlay"
                android:scaleType="fitXY"
                android:src="@drawable/ic_requests"/>
            <TextView
                android:elevation="2dp"
                android:id="@+id/tv_requests"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="@dimen/badgeSizeSmall"
                android:layout_height="@dimen/badgeSizeSmall"
                android:background="@drawable/bg_badge"
                android:padding="2dp"
                android:gravity="center"
                android:textColor="@color/white"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/profile"
        android:clickable="true"
        android:foreground="@drawable/bg_selected"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="@dimen/bottom_nav_item_height"
            android:layout_height="@dimen/bottom_nav_item_width">
            <ImageView
                android:id="@+id/ic_profile"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/bottom_nav_item_icon_width"
                android:layout_height="@dimen/bottom_nav_item_icon_height"
                app:tint="@color/black_overlay"
                android:src="@drawable/ic_profile"/>
            <TextView
                android:elevation="2dp"
                android:id="@+id/tv_profile"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="@dimen/badgeSizeSmall"
                android:layout_height="@dimen/badgeSizeSmall"
                android:background="@drawable/bg_badge"
                android:padding="2dp"
                android:gravity="center"
                android:textColor="@color/white"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>